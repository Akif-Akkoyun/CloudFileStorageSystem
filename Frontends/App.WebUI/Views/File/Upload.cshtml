@model FileUploadViewModel

@{
    ViewData["Title"] = "Dosya Yükle";
}

<section class="ftco-section ftco-no-pb" id="resume-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-8">
                <div class="card bg-dark text-white shadow-lg rounded">
                    <div class="card-header bg-primary text-white text-center">
                        <h4 class="mb-0">Dosya Yükle</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Upload" asp-controller="File" method="post" enctype="multipart/form-data">
                            <div class="form-group mb-3">
                                <label asp-for="Description" class="form-label">Açıklama</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label for="Visibility" class="form-label">Dosya Görünürlüğü</label>
                                @Html.DropDownListFor(model => model.Visibility, new SelectList(Enum.GetValues(typeof(Visibility))), "Seçiniz", new { @class = "form-control" })
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="File" class="form-label">Dosya Seç</label>
                                <input asp-for="File" type="file" class="form-control" />
                                <span asp-validation-for="File" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning">Yükle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .card {
        border: none;
        border-radius: 1rem;
    }

    .card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .btn-success {
        font-weight: bold;
    }

</style>