@model FileUploadViewModel

@{
    ViewData["Title"] = "Dosya Yükle";
}
<section class="ftco-section ftco-no-pb" id="resume-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <h2>Dosya Yükle</h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }
            <form asp-action="Upload" asp-controller="File" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Visibility">Dosya Görünürlüğü</label>
                    @Html.DropDownListFor(model => model.Visibility, new SelectList(Enum.GetValues(typeof(Visibility))), "Seçiniz", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="File">Dosya Seç</label>
                    <input asp-for="File" type="file" class="form-control-file" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Yükle</button>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}