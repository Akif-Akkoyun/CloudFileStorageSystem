@model FileDetailViewModel

<div class="modal-header border-0">
    <h5 class="modal-title">@Model.FileName</h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="card bg-dark text-white shadow-lg">
        <div class="card-body text-center">

            @if (!string.IsNullOrEmpty(Model?.FilePath) &&
            (Model.FilePath.ToLower().EndsWith(".jpg") ||
            Model.FilePath.ToLower().EndsWith(".png") ||
            Model.FilePath.ToLower().EndsWith(".jpeg") ||
            Model.FilePath.ToLower().EndsWith(".webp")))
            {
                <img src="@Model.FilePath" class="img-fluid rounded mb-3" style="max-height: 300px;" />
            }

            <h4 class="card-title">@Model.FileName</h4>
            <p class="card-subtitle text-muted mb-3">Dosya Detayları</p>

            <div class="text-start px-3">
                <p><strong>Açıklama:</strong> @Model.Description</p>
                <p><strong>Yüklenme Tarihi:</strong> @Model.UploadDate.ToString("dd.MM.yyyy HH:mm")</p>
                <p><strong>Görünürlük:</strong> @Model.Visibility</p>
                <p><strong>Yetki:</strong> @Model.Permission</p>
            </div>
        </div>
        <div class="card-footer bg-transparent">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <div class="d-flex justify-content-center">
                    <a asp-controller="File" asp-action="Download" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                        İNDİR
                    </a>
                </div>
            }            
        </div>
    </div>
</div>
