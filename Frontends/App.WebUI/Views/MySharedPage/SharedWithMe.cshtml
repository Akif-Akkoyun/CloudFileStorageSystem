@model List<SharedWithMeViewModel>

@{
    ViewData["Title"] = "Benimle Paylaşılan Dosyalar";
    int count = 1;
}

<section class="ftco-section ftco-no-pb" id="resume-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-12">
                <h2 class="text-center mb-5 fw-bold">Benimle Paylaşılan Dosyalar</h2>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center">
                        Sizinle paylaşılan herhangi bir dosya bulunamadı.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover text-center align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Adı</th>
                                    <th>Açıklama</th>
                                    <th>Sahibi</th>
                                    <th>Paylaşım Türü</th>
                                    <th>Yüklenme Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var file in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@file.FileName</td>
                                        <td>@file.Description</td>
                                        <td>@file.OwnerName</td>
                                        <td>@file.Permission</td>
                                        <td>@file.UploadDate.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            <a asp-controller="File" asp-action="Details" asp-route-id="@file.Id" class="btn btn-sm btn-info">Detay</a>
                                            @if (User?.Identity != null && User.Identity.IsAuthenticated)
                                            {
                                                <a asp-controller="File" asp-action="Download" asp-route-id="@file.Id" class="btn btn-sm btn-success">İndir</a>
                                            }
                                        </td>
                                    </tr>
                                    count++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<style>
    table tbody td {
        color: whitesmoke
    }

    .btn {
        color: black !important;
    }
</style>