@model List<SharedByMeViewModel>

@{
    ViewData["Title"] = "Benim Paylaştığım Dosyalar";
}

<section class="ftco-section ftco-no-pb" id="resume-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-xl-10">
                <h2 class="text-center mb-4">Benim Paylaştığım Dosyalar</h2>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Dosya Adı</th>
                                <th>Açıklama</th>
                                <th>Görünürlük</th>
                                <th>Paylaşılan Kullanıcılar</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Visibility</td>
                                    <td>@string.Join(", ", item.SharedWithUserNames)</td>
                                    <td>
                                        <a asp-controller="File" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                                        <a asp-controller="File" asp-action="Download" asp-route-id="@item.Id" class="btn btn-success btn-sm">İndir</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                    <div class="alert alert-info mt-3">
                        Henüz paylaştığınız bir dosya bulunmamaktadır.
                    </div>
                }

            </div>
        </div>
    </div>
</section>
<style>
    table tbody td {
        color: whitesmoke
    }
    .btn {
        color: black !important;
    }
</style>