@model ShareFileViewModel

@{
    ViewData["Title"] = "Dosya Paylaş";
}

<section class="ftco-section ftco-no-pb">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body" id="form-wrapper">
                        <h4 class="card-title text-center mb-4" style="color:black">Dosyayı Paylaş</h4>

                        <form asp-action="ShareFile" asp-controller="MySharedPage" method="post">
                            <input type="hidden" asp-for="Id" />

                            <div class="mb-3">
                                <label asp-for="SelectedUserIds" class="form-label" style="color:black">Kullanıcı Seç</label>
                                <select asp-for="SelectedUserIds" asp-items="Model.AllUsers" multiple class="form-control select2" style="color:black"></select>
                                <small class="form-text text-muted">CTRL veya CMD tuşuna basarak birden fazla kişi seçebilirsiniz.</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Permission" class="form-label" style="color:black">Paylaşım Yetkisi</label>
                                <select asp-for="Permission" class="form-control">
                                    <option value="ReadOnly">Sadece Görüntüle</option>
                                    <option value="ReadWrite">Düzenleme Yetkili</option>
                                </select>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-warning">Paylaş</button>
                                <a asp-action="MyFiles" asp-controller="MyPage" class="btn btn-success ms-2">Geri Dön</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .select2-container--default .select2-selection--multiple {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        padding: 0.375rem 0.75rem;
        min-height: 45px;
        background-color: #fff;
        display: flex;
        align-items: center;
    }
        .select2-container--default .select2-selection--multiple .select2-search__field {
            margin-top: 0 !important;
            height: 28px !important;
        }

    .select2-container {
        z-index: 9999 !important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Kullanıcıları seçin",
                width: '100%',
                dropdownParent: $('#form-wrapper')
            });
        });
    </script>
}
