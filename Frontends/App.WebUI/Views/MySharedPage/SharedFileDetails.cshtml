@model FileDetailViewModel

@{
    ViewData["Title"] = "Paylaşılan Dosya Detayı";
}

<section class="ftco-section ftco-no-pb" id="resume-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="page-content">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-xl-10">
                            <div class="card bg-dark text-white">
                                <div class="card-body text-center">

                                    @{
                                        bool isImage = !string.IsNullOrEmpty(Model?.FilePath) &&
                                        (Model.FilePath.ToLower().EndsWith(".jpg") ||
                                        Model.FilePath.ToLower().EndsWith(".jpeg") ||
                                        Model.FilePath.ToLower().EndsWith(".png") ||
                                        Model.FilePath.ToLower().EndsWith(".webp") ||
                                        Model.FilePath.ToLower().EndsWith(".gif"));
                                    }

                                    @if (isImage)
                                    {
                                        <img src="@Model.FilePath"
                                             alt="@Model.FileName"
                                             class="img-fluid mb-4"
                                             style="max-height: 400px; border-radius: 10px;" />
                                    }

                                    <h4 class="card-title mt-3">@Model.FileName</h4>
                                    <p class="card-subtitle mb-4 text-muted">Paylaşılan Dosya Detayları</p>

                                    <div class="table-responsive mt-4">
                                        <table class="table table-bordered text-white">
                                            <tbody>
                                                <tr>
                                                    <th class="bg-secondary">Açıklama</th>
                                                    <td>@Model.Description</td>
                                                </tr>
                                                <tr>
                                                    <th class="bg-secondary">Yüklenme Tarihi</th>
                                                    <td>@Model.UploadDate.ToString("dd.MM.yyyy HH:mm")</td>
                                                </tr>
                                                <tr>
                                                    <th class="bg-secondary">Görünürlük</th>
                                                    <td>@Model.Visibility</td>
                                                </tr>
                                                <tr>
                                                    <th class="bg-secondary">Paylaşım Yetkisi</th>
                                                    <td>@Model.Permission</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a asp-controller="File" asp-action="Download" asp-route-id="@Model.Id" class="btn btn-success mt-3">Dosyayı İndir</a>
                                        <a asp-controller="MyPage" asp-action="Share" asp-route-id="@Model.Id" class="btn btn-info mt-3">Paylaş</a>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning mt-3 text-dark bg-light">
                                            Dosyayı indirebilmek için giriş yapmanız gerekmektedir.
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    body {
        background-color: #121212;
        color: white;
    }

    .table td, .table th {
        color: white;
        border-color: #555;
    }

    .btn {
        color: white !important;
    }

    .card-title, .card-subtitle {
        color: white;
    }

    .alert {
        color: black;
    }
</style>
