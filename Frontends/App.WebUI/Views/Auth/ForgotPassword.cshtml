@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password Page";
}
<div class="container" style="margin-top: 150px; margin-bottom: 200px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg" style="background-color: black;">
                <div class="card-body p-4">
                    <h3 class="text-center mb-3">Şifremi Unuttum</h3>
                    <p class="text-center text-muted mb-4">Şifre sıfırlama bağlantısını almak için email adresinizi girin.</p>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewBag.Error
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @TempData["Success"]
                        </div>
                    }
                    <form asp-controller="Auth" asp-action="ForgotPassword" method="post">
                        <div class="form-group mb-4">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-warning">Sıfırlama LİNKİ Gönder</button>
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-link" style="color:yellow">Ana Sayfa</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>