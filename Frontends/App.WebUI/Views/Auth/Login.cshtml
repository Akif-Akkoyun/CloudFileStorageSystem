@model LoginViewModel

@{
    ViewData["Title"] = "SignIn";
}

<div class="container" style="margin-top: 150px; margin-bottom: 200px;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg" style="background-color: black;">
                <div class="card-body p-4">
                    <h3 class="text-center mb-3">Giriş Yap</h3>
                    <h6 class="text-center mb-4 text-muted">
                        Bir hesabın yok mu? Hemen kayıt ol!
                    </h6>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center" id="errorDiv">
                            @ViewBag.Error
                        </div>
                    }

                    <form asp-controller="Auth" asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="PasswordHash">Parola</label>
                            <input asp-for="PasswordHash" class="form-control" placeholder="Şifreniz" type="password" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-warning">Giriş Yap</button>
                            <div>
                                <a asp-controller="Auth" asp-action="Register" class="btn btn-danger" >Kayıt Ol</a>
                                <a asp-controller="Auth" asp-action="ForgotPassword" class="btn btn-warning">Şifremi Unuttum</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

